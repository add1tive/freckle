{
    "compilerOptions": {
        "composite": true,
        "target": "es2024",
        "module": "esnext",
        "moduleResolution": "bundler",
        "baseUrl": "./",
        "typeRoots": ["./@types/*.d.ts"],
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "include": ["**/*"]
}
